---
import '../css/activities.css'
import register from '../assets/Register.gif'
import { Image } from 'astro:assets'

interface Props {
    title: string,
    excerpt: string,
    content: string,
    featuredImage: string,
    date: string,
    slug: string,
    link: string
}

const {title, excerpt, content, date, slug, featuredImage, link} = Astro.props

---
<div class="activities-card">
    <div class="activities-card-info" set:html={content}>
    </div>
    <div class="activities-card-content">
        <div class="activities-card--image">
            <Image src={featuredImage} alt="Kids playing" width={100} height={100}/>
        </div>
        <div class="activities-card--tittle">
            <h3 set:html={title}></h3>
        </div>
        <div class="activities-card--text" set:html={excerpt}>
        </div>
        <div class="activities-more">
            <a href="/" target="_blank"><Image src={register} alt="registro" class="card-register" />Registrate</a>
            <button class="card-btn">Ver m√°s</button>
        </div>
    </div>
</div>
